<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#3A383A">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:background="@drawable/assignmentcarddrop">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/assignmentcardicon"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"

                app:tint="#ffffff"/>

        </LinearLayout>




        <TextView
            android:id="@+id/pdf_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Assignment_Sample"
            android:textSize="30sp"
            android:textColor="@color/cardtextcolor"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline : "
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/cardtextcolor"
            />

        <TextView
            android:id="@+id/deadline_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardtextcolor"
            android:text="dd/mm/yyyy"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/deadlineicon"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:tint = "#ffffff"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_gravity="bottom|right"
            android:id="@+id/delete_pdf"
            android:padding="20dp"/>


    </androidx.cardview.widget.CardView>


</LinearLayout>


